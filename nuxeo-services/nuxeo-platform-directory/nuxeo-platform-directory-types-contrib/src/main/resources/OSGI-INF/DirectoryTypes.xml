<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.types">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="user" src="directoryschema/user.xsd"/>
    <schema name="group" src="directoryschema/group.xsd"/>
    <schema name="vocabulary" src="directoryschema/vocabulary.xsd"/>
    <schema name="vocabulary_noid" src="directoryschema/vocabulary_noid.xsd"/>
    <schema name="xvocabulary" src="directoryschema/xvocabulary.xsd"/>
    <schema name="xvocabulary_noid" src="directoryschema/xvocabulary_noid.xsd"/>
    <schema name="l10nvocabulary" src="directoryschema/l10nvocabulary.xsd"/>
    <schema name="l10nxvocabulary" src="directoryschema/l10nxvocabulary.xsd"/>
    <schema name="l10nxvocabulary_noid" src="directoryschema/l10nxvocabulary_noid.xsd"/>
    <schema name="documentsLists" src="directoryschema/documentsLists.xsd" />
    <schema name="documentsLists_noid" src="directoryschema/documentsLists_noid.xsd" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    <doctype name="VocabularyEntry" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="vocabulary_noid" />
      <facet name="SystemDocument" />
    </doctype>
    <doctype name="XVocabularyEntry" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="xvocabulary_noid" />
      <facet name="SystemDocument" />
    </doctype>
    <doctype name="L10NXVocabularyEntry" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="l10nxvocabulary_noid" />
      <facet name="SystemDocument" />
    </doctype>
    <doctype name="DocumentsListsEntry" extends="Document">
      <schema name="common" />
      <schema name="dublincore" />
      <schema name="documentsLists_noid" />
      <facet name="SystemDocument" />
    </doctype>
  </extension>

</component>
